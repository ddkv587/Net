source ./config

do_make()
{
	echo ---------------------------------
	echo 	prepare to make $1   -----
	echo ---------------------------------

	cd ./$1
	make -f makefile 
	make_ret=$?

	cd ${CUR_DIR}

	if [ $make_ret -ne 0 ]; then
		echo ---------------- make $1 failed ---------------
		exit 1
	fi
}

do_make multiplex
do_make listener
do_make processor
