source ./config

do_make()
{
	echo ---------------------------------
	echo 	prepare to make $1   -----
	echo ---------------------------------

	cd ./$1
	make -f makefile 
	make_ret=$?

	cd ${CUR_DIR}

	if [ $make_ret -ne 0 ]; then
		echo ---------------- make $1 failed ---------------
		exit 1
	fi
}

rm -rf $IM_PATH

if [ ! -e $TARGET_PATH ];then
	mkdir $TARGET_PATH
fi

if [ ! -e $IM_PATH ];then
	mkdir $IM_PATH
fi

do_make core
do_make listener
do_make protocol
do_make processor

do_make demo
